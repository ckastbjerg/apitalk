<div class="form-group">
    <label class="label-control">Endpoint</label>
    <select class="js-endpoint form-control">
        {{#each data}}
        <option value="{{this.url}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>
<hr>
<label class="label-control pull-left">API settings</label>
<a class="pull-right" href="https://issuu.com/home/settings/apikey" target="_blank">Get your keys...</a>
<div class="form-group">
    <input class="js-api-key form-control" type="text" placeholder="Api key">
</div>
<div class="form-group">
    <input class="js-api-secret form-control" type="text" placeholder="Api secret">
</div>
<button type="button" class="js-api-settings-btn btn btn-default btn-xs" disabled>Store locally</button>
<hr>
<div class="form-group">
    <label class="label-control">Environment</label>
    <select class="js-environment form-control">
        <option name="issuu" selected>issuu</option>
        <option name="tissuu">tissuu</option>
    </select>
</div>
<hr>
<button class="js-stubbed-data-btn btn btn-default">Generate stubbed data</button>
